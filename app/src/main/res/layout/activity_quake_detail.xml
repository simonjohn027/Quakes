<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuakeDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:padding="25dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="9dp">

                <ImageView
                    android:id="@+id/pin"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/vibrs" />


                <TextView
                    android:id="@+id/quake_magnitude"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="2.3 R"
                    android:background="@drawable/round_textview"
                    android:textColor="#103C70"
                    android:gravity="center"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"/>


                <TextView
                    android:id="@+id/quake_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    android:text="North Dakot"
                    android:textAllCaps="true"
                    android:textColor="#103C70"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quake_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    android:text="Tues 26, Nov 2018"
                    android:textAllCaps="false"
                    android:textColor="#103C70"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quake_lats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    android:text="Lats 12, Long 32"
                    android:textAllCaps="false"
                    android:textColor="#103C70"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quake_depth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    android:text="Depth 3.6 KM"
                    android:textAllCaps="false"
                    android:textColor="#103C70"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quake_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EQMN"
                    android:textColor="#103C70"
                    android:gravity="center_vertical"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginBottom="20dp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>